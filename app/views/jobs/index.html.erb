<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Description</th>
      <th>Skills</th>
      <th>Diploma</th>
      <th>Diploma Major</th>
      <th>Experience</th>
      <th colspan='1'></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %> 
    <tr>
      <td> <%= job.description %> </td>
      <td> <%= job.skills %> </td>
      <td> <%= job.diploma %> </td>
      <td> <%= job.diploma_major %> </td>
      <td> <%= job.experience %> </td>
      <td> <%= link_to "Show", job %> 
           <%= link_to "Delete", @job, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %> 
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add New Job", new_job_path, class:"btn btn-secondary" %>

